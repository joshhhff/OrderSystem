<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - OrderSystemApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/OrderSystemApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" >Order System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1" style="align-items: center;">
                        <li class="nav-item hide-on-login-screen">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Orders/Index">Orders</a>
                    </li>
                        <li class="nav-item hide-on-login-screen admin-only">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Customers/Index">Customers</a>
                    </li>
                        <li class="nav-item hide-on-login-screen admin-only">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Products</a>
                    </li>
                        <li class="nav-item hide-on-login-screen admin-only">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Users/Index">Users</a>
                    </li>
                        <li class="nav-item hide-on-login-screen" style="margin-left: auto;">

                            <a class="nav-link text-dark" style="margin-bottom: 0;" asp-area="" asp-page="/Account"><button class="btn btn-secondary">Account</button></a>
                        </li>
                    <li class="nav-item hide-on-login-screen">
                        <button type="button" class="btn btn-primary" onclick="logOutUser()">Log Out</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>