@page "/"
@using CO550WebApp.Pages
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-screen">
    <div class="login-form-container">
        <form method="POST" class="login-form">
            <h1 class="display-4">Login</h1>

            <div class="input-group">
                <input class="login-input" asp-for="Email" placeholder="Email" type="email" required />
            </div>

            <div class="input-group">
                <input class="login-input" asp-for="Password" placeholder="Password" type="password" required />
            </div>

            <div class="submit-container">
                <input type="submit" class="submit-button" value="Login" />
            </div>

            <div class="signup-link text-center">
                <p>Don't have an account? <a href="/register">Sign Up</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: white;
        font-family: 'Arial', sans-serif;
    }

    .login-screen {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-form-container {
        background: #ffffff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 420px;
    }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .display-4 {
        font-size: 2rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 30px;
    }

    .input-group {
        display: flex;
        flex-direction: column;
    }

    .login-input {
        padding: 12px;
        font-size: 16px;
        border: 2px solid #ddd;
        border-radius: 6px;
        margin-bottom: 15px;
        transition: border-color 0.3s;
    }

    .login-input:focus {
        border-color: grey;
        outline: none;
    }

    .submit-container {
        text-align: center;
    }

    .submit-button {
        background-color: lightsteelblue;
        color: #fff;
        padding: 12px 20px;
        font-size: 16px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s;
    }

    .submit-button:hover {
        background-color: lightblue;
    }

    .signup-link p {
        font-size: 14px;
        color: #777;
    }

    .signup-link a {
        color: white;
        text-decoration: none;
    }

    .signup-link a:hover {
        text-decoration: underline;
    }
</style>