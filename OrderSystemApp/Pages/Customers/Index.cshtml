@page
@model OrderSystemApp.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<p>
    <a asp-page="Create"><button class="btn btn-primary">New</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="width: 10%;"></th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Phone)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                <div class="edit-view-buttons">
                    <a asp-page="./Edit" asp-route-id="@item.ID"><button class="btn btn-primary">Edit</button></a>
                    <a asp-page="./Details" asp-route-id="@item.ID"><button class="btn btn-primary">View</button></a>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
        </tr>
}
    </tbody>
</table>
